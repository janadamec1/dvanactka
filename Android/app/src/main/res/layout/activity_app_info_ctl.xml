<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_app_info_ctl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.roomarranger.android.dvanactka.AppInfoCtl">

    <RelativeLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/wifi_download_only"
            android:id="@+id/chkWifi"
            />
        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_above="@+id/chkWifi"
              android:layout_margin="8dp"
              android:background="@android:color/darker_gray"
              android:id="@+id/line1"/>
        <TextView
            android:text="Copyright Â© 2016-2018, Jan Adamec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/line1"
            android:gravity="center"
            android:id="@+id/copyright"
            tools:ignore="HardcodedText" />

        <Button
            android:text="info@email.cz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/copyright"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnEmail"
            tools:ignore="HardcodedText" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnEmail"
            android:text="DEBUG: Use test data"
            android:id="@+id/chkDebugUseTestData"
            tools:ignore="HardcodedText" />

        <TextView
            android:text="@string/appinfo_longtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView"/>

    </RelativeLayout>
</RelativeLayout>